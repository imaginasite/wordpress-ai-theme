{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "620px",
      "wideSize": "1140px",
      "blockGap": "24px"
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "name": "System Font",
          "slug": "system",
          "fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Oxygen-Sans, Ubuntu, Cantarell, \"Helvetica Neue\", sans-serif"
        },
        {
          "name": "Serif",
          "slug": "serif",
          "fontFamily": "\"Times New Roman\", \"New York\", Times, \"Noto Serif\", serif"
        },
        {
          "name": "Monospace",
          "slug": "monospace",
          "fontFamily": "Consolas, Menlo, Monaco, \"SF Mono\", \"DejaVu Sans Mono\", \"Roboto Mono\", \"Courier New\", Courier, monospace"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "slug": "small",
          "size": "0.875rem"
        },
        {
          "name": "Medium",
          "slug": "medium",
          "size": "1.125rem",
          "fluid": {
            "min": "1rem",
            "max": "1.25rem"
          }
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "1.375rem",
          "fluid": {
            "min": "1.125rem",
            "max": "1.5rem"
          }
        },
        {
          "name": "XL",
          "slug": "x-large",
          "size": "2rem",
          "fluid": {
            "min": "1.75rem",
            "max": "2rem"
          }
        },
        {
          "name": "XXL",
          "slug": "xx-large",
          "size": "3rem",
          "fluid": {
            "min": "2.15rem",
            "max": "3rem"
          }
        }
      ],
      "lineHeight": true
    },
    "color": {
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "name": "White",
          "slug": "white",
          "color": "#ffffff"
        },
        {
          "name": "Black",
          "slug": "black",
          "color": "#333333"
        },
        {
          "name": "Dark Gray",
          "slug": "dark-gray",
          "color": "#666666"
        },
        {
          "name": "Gray",
          "slug": "gray",
          "color": "#888888"
        },
        {
          "name": "Light Gray",
          "slug": "light-gray",
          "color": "#d3d3d3"
        },
        {
          "name": "Very Light Gray",
          "slug": "very-light-gray",
          "color": "#f4f4f4"
        },
        {
          "name": "Transparent",
          "slug": "transparent",
          "color": "transparent"
        }
      ]
    },
    "custom": {
      "spacing": {},
      "units": ["px", "em", "rem", "%", "vw", "vh"]
    }
  },
  "styles": {
    "elements": {
      "text": {
        "typography": {
          "fontSize": "medium",
          "lineHeight": "1.5"
        }
      },
      "heading": {
        "typography": {
          "lineHeight": "1.125"
        }
      },
      "link": {
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "color": "#666666"
        }
      },
      "button": {
        ":hover": {
          "backgroundColor": "#888888",
          "color": "#ffffff"
        }
      }
    }
  },
  "customTemplates": [],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
