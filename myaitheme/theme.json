{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "name": "System",
          "slug": "system",
          "fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Oxygen-Sans, Ubuntu, Cantarell, \"Helvetica Neue\", sans-serif"
        },
        {
          "name": "Serif",
          "slug": "serif",
          "fontFamily": "\"Times New Roman\", \"New York\", Times, \"Noto Serif\", serif"
        },
        {
          "name": "Monospace",
          "slug": "monospace",
          "fontFamily": "Consolas, Menlo, Monaco, \"SF Mono\", \"DejaVu Sans Mono\", \"Roboto Mono\", \"Courier New\", Courier, monospace"
        }
      ],
      "fontSizes": [
        {
          "name": "Petite",
          "slug": "small",
          "size": "0.875rem"
        },
        {
          "name": "Moyenne",
          "slug": "medium",
          "size": "1.125rem",
          "fluid": {
            "min": "1rem",
            "max": "1.25rem"
          }
        },
        {
          "name": "Grande",
          "slug": "large",
          "size": "1.375rem",
          "fluid": {
            "min": "1.125rem",
            "max": "1.5rem"
          }
        },
        {
          "name": "XL",
          "slug": "x-large",
          "size": "2rem",
          "fluid": {
            "min": "1.75rem",
            "max": "2rem"
          }
        },
        {
          "name": "XXL",
          "slug": "xx-large",
          "size": "3rem",
          "fluid": {
            "min": "2.15rem",
            "max": "3rem"
          }
        }
      ],
      "lineHeight": true
    },
    "color": {
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        { "name": "Blanc", "slug": "white", "color": "#ffffff" },
        { "name": "Noir", "slug": "black", "color": "#333333" },
        { "name": "Gris Foncé", "slug": "dark-gray", "color": "#666666" },
        { "name": "Gris", "slug": "gray", "color": "#888888" },
        { "name": "Gris Clair", "slug": "light-gray", "color": "#d3d3d3" },
        { "name": "Gris Léger", "slug": "lighter-gray", "color": "#f4f4f4" },
        { "name": "Transparent", "slug": "transparent", "color": "transparent" }
      ]
    },
    "layout": {
      "contentSize": "620px",
      "wideSize": "1140px",
      "blockGap": "24px"
    }
  },
  "styles": {
    "elements": {
      "text": {
        "typography": {
          "fontSize": "medium",
          "lineHeight": "1.5"
        }
      },
      "link": {
        "typography": {
          "textDecoration": "underline"
        }
      },
      "heading": {
        "typography": {
          "lineHeight": "1.125"
        }
      }
    }
  }
}
